@model System.Data.DataTable
@{
    ViewBag.Title = "Book List";
}

<h2>Book Library</h2>
<a href="@Url.Action("Create", "Book")" class="btn btn-success">Add New Book</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Year</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow row in Model.Rows)
        {
            <tr>
                <td>@row["BookId"]</td>
                <td>@row["Title"]</td>
                <td>@row["Author"]</td>
                <td>@row["Price"]</td>
                <td>@row["PublishedYear"]</td>
                <td>
                    <a href="@Url.Action("Edit", "Book", new { id = row["BookId"] })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Book", new { id = row["BookId"] })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

